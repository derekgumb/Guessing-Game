secret_word = "giraffe"
guess = ""
guess_count = 0
guess_limit = 3
out_of_guesses = False

print("Welcome to the Guessing Game! You have 3 chances to guess the Secret Word")
while guess != secret_word and not(out_of_guesses):
    if guess_count < guess_limit:
        guess = input("Enter a guess: ")
        guess_count += 1
        if guess != secret_word and guess_count==1:
            print("Wrong guess, try again. 2 chances left")
        if guess != secret_word and guess_count==2:
            print("Wrong guess, try again. 1 chance left")
    else:
        out_of_guesses = True

if out_of_guesses:
    print("Out of guesses. You lose! ")
elif guess == secret_word:
    print("You guessed the secret word! You win!")

